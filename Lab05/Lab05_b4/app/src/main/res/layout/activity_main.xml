<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_basex3"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <EditText
        android:id="@+id/etURL"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basex3"
        android:text="https://dongnd310.github.io/NT118_MobileLab/Lab05/music.mp3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_base"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Play Music"
            android:layout_marginStart="@dimen/margin_basex3"
            android:layout_marginEnd="@dimen/margin_basex3"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"

            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_basex3"
            android:layout_marginEnd="@dimen/margin_basex3"/>
    </LinearLayout>

</LinearLayout>